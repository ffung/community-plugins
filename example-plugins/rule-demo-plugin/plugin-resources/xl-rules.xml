<?xml version="1.0"?>
<rules xmlns="http://www.xebialabs.com/xl-deploy/xl-rules">

    <rule name="startStopServer" scope="plan">
        <planning-script>planning/start-stop-server.py</planning-script>
    </rule>

    <rule name="deployArtifact" scope="deployed">
        <conditions>
            <type>example.Artifact</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>

        <steps>
    		<os-script>
    			<target-host expression="true">deployed.container.host</target-host>
    			<script>scripts/deploy-artifact</script>
    		</os-script>
    	</steps>
    </rule>

    <rule name="destroyArtifact" scope="deployed">
        <conditions>
            <type>example.Artifact</type>
            <operation>DESTROY</operation>
        </conditions>

        <steps>
            <os-script>
                <target-host expression="true">deployed.container.host</target-host>
                <script>scripts/undeploy-artifact</script>
            </os-script>
        </steps>
    </rule>

    <rule name="deployResource" scope="deployed">
        <conditions>
            <type>example.Resource</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>

        <steps>
            <upload>
                <target-host expression="true">deployed.container.host</target-host>
                <target-path expression="true">deployed.container.home + "/resources" + deployed.file.name</target-path>
            </upload>
    	</steps>
    </rule>

    <rule name="destroyResource" scope="deployed">
        <conditions>
            <type>example.Resource</type>
            <operation>DESTROY</operation>
        </conditions>

        <steps>
            <delete>
                <target-host expression="true">deployed.container.host</target-host>
                <target-path expression="true">deployed.container.home + "/resources" + deployed.file.name</target-path>
            </delete>
        </steps>
    </rule>

    <rule name="deployDatasource" scope="deployed">
        <conditions>
            <type>example.Datasource</type>
            <operation>CREATE</operation>
            <operation>MODIFY</operation>
        </conditions>

        <steps>
            <template>
                <target-host expression="true">deployed.container.host</target-host>
                <target-path expression="true">deployed.container.home + "/conf" + deployed.name</target-path>
                <template-path>templates/datasource.ftl</template-path>
                <freemarker-context>
                    <prop>myProp</prop>
                </freemarker-context>
            </template>
    	</steps>
    </rule>

    <rule name="emailRule" scope="post-plan">
        <planning-script>planning/send-email.py</planning-script>
    </rule>
</rules>
